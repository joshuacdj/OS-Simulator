<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E" 
    android:padding="16dp"
    tools:context=".CreditsActivity">

    <TextView
        android:id="@+id/textViewCreditsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Credits"
        android:textColor="#E0E0E0"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewAuthorsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Authors:"
        android:textColor="#C5C6C7" 
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreditsTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewAuthorsNames"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Joshua\nChi Heng\nZhi Yi\nNicholas\nSean" 
        android:textColor="#E0E0E0" 
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="@+id/textViewAuthorsLabel"
        app:layout_constraintStart_toEndOf="@+id/textViewAuthorsLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewProjectInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CS205 Project - G1T1"
        android:textColor="#C5C6C7"
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@+id/textViewAuthorsNames"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Back"
        android:backgroundTint="#0F3460"
        android:textColor="#FFFFFF"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 